<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099cc"
        tools:context=".AddPOI">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:backgroundTint="#ffffff"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:title="Add A POI" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginLeft="20sp"
                android:fontFamily="@font/roboto_thin"
                android:text="Please include some information about this point of interest. Be mindful that falsely made POIs can be removed and may lead to account suspension" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:fontFamily="@font/roboto"
                android:text="Name" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="20sp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:fontFamily="@font/roboto"
                android:text="Type*" />

            <Spinner
                android:id="@+id/spinner"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="379dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="25sp"
                android:dropDownWidth="match_parent"
                android:fadeScrollbars="false"
                android:popupElevation="0sp"
                android:spinnerMode="dialog"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:fontFamily="@font/roboto"
                android:text="Description*" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/roboto"
                android:text="Add description"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="20sp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:fontFamily="@font/roboto"
                android:text="Keywords*" />

            <EditText
                android:id="@+id/keywords"
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="20sp"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:backgroundTint="#02C6D7"
                android:fontFamily="@font/roboto"
                android:text="Add a Photo"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="149dp"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/currlocRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use Current Location" />

                    <RadioButton
                        android:id="@+id/markerlocRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use Marker Location" />

                </RadioGroup>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="25sp"
                    android:backgroundTint="#6E963B"
                    android:text="Submit"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</ScrollView>